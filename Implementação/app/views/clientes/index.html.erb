    <div >
      <div class="content2">  
        <h1>Clientes Cadastrados</h1>
          <div>
            <p id="notice"><%= notice %></p>
          </div>
          <br>
          <table>
              <tr>
                <th>Nome</th>
                <th colspan="3">Opções</th>
              </tr>
              <% @clientes.each do |cliente| %>
                <tr>
                  <td><%= formatted_name(cliente.Nome) %></td>
                  <td><%= link_to '<button type="button">Mostrar</button>'.html_safe, cliente, pagina: "Editar Cliente" %></td>
                  <td><%= link_to '<button type="button">Editar</button>'.html_safe, edit_cliente_path(cliente) %></td>
                  <td><%= link_to '<button type="button">Deletar</button>'.html_safe, cliente, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                </tr>
              <% end %>
          </table>
          <br>
          <div >
            <%= link_to '<button type="button">Cadastrar Novo Cliente</button>'.html_safe, new_cliente_path %>
          </div>
        </div>
      </div>
<br>

